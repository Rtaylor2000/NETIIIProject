@model DataObject.Evolution

@{
    ViewBag.Title = "TryEvolutionDelete";
}

<h2>Try Evolution Delete</h2>

<div>
    <h4>Evolution</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Reactant)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reactant)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EvolutionCondition)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EvolutionCondition)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EvolvesInto)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EvolvesInto)
        </dd>

    </dl>
</div>
<div>
    <h2>Are you sure you want to delete this evolution?</h2>
    @using (Html.BeginForm("Delete", "Evolution", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("delete", true)
        @Html.Hidden("reactant", Model.Reactant)
        @Html.Hidden("condition", Model.EvolutionCondition)
        @Html.Hidden("evolvesInto", Model.EvolvesInto)
        <input type="submit" value="Yes" class="btn btn-default" />
    }
    @using (Html.BeginForm("Delete", "Evolution", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("delete", false)
        @Html.Hidden("reactant", Model.Reactant)
        @Html.Hidden("condition", Model.EvolutionCondition)
        @Html.Hidden("evolvesInto", Model.EvolvesInto)
        <input type="submit" value="No" class="btn btn-default" />
    }
</div>
