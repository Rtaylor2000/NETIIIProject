@model DataObject.Location

@{
    ViewBag.Title = "TryLocationDelete";
}

<h2>Delete Location</h2>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<div>
    <h2>Are you sure you want to delete this pokemon?</h2>
    @using (Html.BeginForm("Delete", "Location", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("delete", true)
        @Html.Hidden("locationName", Model.LocationName)
        <input type="submit" value="Yes" class="btn btn-default" />
    }
    @using (Html.BeginForm("Delete", "Location", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("delete", false)
        @Html.Hidden("locationName", Model.LocationName)
        <input type="submit" value="No" class="btn btn-default" />
    }
</div>
