@model DataObject.Location

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Location</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LocationName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LocationName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>

@{

    if (ViewBag.PokemonLocations.Count != 0)
    {

        <p>
            Pokemon:
        </p>

        <table class="table">
            <tr>
                <th>
                    Pokemon Name
                </th>
                <th>
                    Game Name
                </th>
                <th>
                    How the Pokemon is Found
                </th>
                <th>
                    the Level the Pokemon is Found
                </th>
                <th>
                    Encounter Rate
                </th>
            </tr>

            @foreach (var pokemonLocations in ViewBag.PokemonLocations)
            {
                <tr>
                    <td>
                        @pokemonLocations.PokemonName
                    </td>
                    <td>
                        @pokemonLocations.GameName
                    </td>
                    <td>
                        @pokemonLocations.HowFound
                    </td>
                    <td>
                        @pokemonLocations.LevelFound
                    </td>
                    <td>
                        @pokemonLocations.SpeciesEncounterRate
                    </td>
                </tr>
            }

        </table>
    }
}

<p>
    @Html.ActionLink("Back to List", "AllLocations")
</p>
