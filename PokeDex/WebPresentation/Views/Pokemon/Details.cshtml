@{
    if (ViewBag.Evolutions.Count > 1)
    {
        <p>
            Evolutions:
        </p>
    }
    else
    {
        <p>
            Evolution:
        </p>
    }

    if (ViewBag.Evolutions.Count != 0)
    {

        <table class="table">
            <tr>
                <th>
                    Pokemon Being Evolved
                </th>
                <th>
                    Evolution Method
                </th>
                <th>
                    Evolved Pokemon
                </th>
                <th></th>
            </tr>

            @foreach (var evolution in ViewBag.Evolutions)
            {
                <tr>
                    <td>
                        @evolution.Reactant
                    </td>
                    <td>
                        @evolution.EvolutionCondition
                    </td>
                    <td>
                        @evolution.EvolvesInto
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p style="font-weight: bold">This Pokemon Does Not Evolve.</p>
    }

    if (ViewBag.PokemonLocations.Count > 1)
    {
        <p>
            Locations:
        </p>
    }
    else
    {
        <p>
            Location:
        </p>
    }

    if (ViewBag.PokemonLocations.Count != 0)
    {

        <table class="table">
            <tr>
                <th>
                    Location Name
                </th>
                <th>
                    Pokemon Name
                </th>
                <th>
                    Game Name
                </th>
                <th>
                    How the Pokemon is Found
                </th>
                <th>
                    the Level the Pokemon is Found
                </th>
                <th>
                    Encounter Rate
                </th>
            </tr>

            @foreach (var pokemonLocations in ViewBag.PokemonLocations)
            {
                <tr>
                    <td>
                        @pokemonLocations.LocationName
                    </td>
                    <td>
                        @pokemonLocations.PokemonName
                    </td>
                    <td>
                        @pokemonLocations.GameName
                    </td>
                    <td>
                        @pokemonLocations.HowFound
                    </td>
                    <td>
                        @pokemonLocations.LevelFound
                    </td>
                    <td>
                        @pokemonLocations.SpeciesEncounterRate
                    </td>
                </tr>
            }

        </table>
    }
    else
    {
        <p style="font-weight: bold">Habitat Unkown.</p>
    }

}

<p>
