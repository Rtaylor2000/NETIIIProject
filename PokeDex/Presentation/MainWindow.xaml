            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition Width="220"></ColumnDefinition>
                <ColumnDefinition Width="120"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label x:Name="lblGreeting" Grid.Column="0" Content="test" Margin="20 0"
                   HorizontalContentAlignment="Right" />
            <Label x:Name="lblRoles" Grid.Column="1" Content="test" />
            <TextBox x:Name="txtUserName" Grid.Column="2" Text="" Margin="10 6 10 0" 
                  Width="200"   HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"/>
            <Label x:Name="lblUserName" Content="Email Address" FontSize="10" 
                   Grid.Column="2" Grid.Row="1" HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Top" VerticalAlignment="Top" />

            <PasswordBox x:Name="pwdPassword" Grid.Column="3" Password="" 
                         Margin="10 6 10 0" Width="200" 
                         HorizontalContentAlignment="Center" 
                         VerticalContentAlignment="Center" />
            <Label x:Name="lblPassword" Content="Password" FontSize="10" Grid.Column="3" 
                   Grid.Row="1" HorizontalContentAlignment="Center" 
                   VerticalContentAlignment="Top" VerticalAlignment="Top" />

            <Button x:Name="btnLogin" HorizontalAlignment="Left" Margin="10 4 10 4" 
                    Width="100" Grid.Column="4" Content="Login" Click="btnLogin_Click"  />
            <Button x:Name="btnCreatAccount" HorizontalAlignment="Left" Margin="10 2 10 2" 
                    Width="100" Grid.Column="4" Grid.Row="1" Content="Creat Account" Click="btnCreatAccount_Click" />

